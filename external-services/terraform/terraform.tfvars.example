# =============================================================================
# Terraform Variables Example
# =============================================================================
# 복사해서 terraform.tfvars로 사용하세요.
# terraform.tfvars는 .gitignore에 포함되어 있습니다.

# -----------------------------------------------------------------------------
# 기본 설정
# -----------------------------------------------------------------------------
aws_region   = "ap-northeast-2"
project_name = "c4ang"
environment  = "dev"  # dev, staging, prod

# -----------------------------------------------------------------------------
# 네트워크 설정 (c4ang-terraform 출력값 사용)
# -----------------------------------------------------------------------------
# terraform output -state=../c4ang-terraform/terraform.tfstate vpc_id
vpc_id = "vpc-xxxxxxxxxxxxxxxxx"

# terraform output -state=../c4ang-terraform/terraform.tfstate database_subnet_ids
database_subnet_ids = [
  "subnet-xxxxxxxxxxxxxxxxx",
  "subnet-yyyyyyyyyyyyyyyyy"
]

# terraform output -state=../c4ang-terraform/terraform.tfstate eks_node_security_group_id
eks_node_security_group_id = "sg-xxxxxxxxxxxxxxxxx"

# -----------------------------------------------------------------------------
# RDS PostgreSQL 설정
# -----------------------------------------------------------------------------
create_rds            = true
rds_instance_class    = "db.t3.micro"      # 개발용
# rds_instance_class  = "db.r6g.large"     # 프로덕션용
rds_engine_version    = "15.4"
rds_allocated_storage = 20
rds_master_username   = "postgres"
rds_master_password   = "CHANGE_ME_SECURE_PASSWORD"  # 최소 8자

# -----------------------------------------------------------------------------
# ElastiCache Redis 설정
# -----------------------------------------------------------------------------
create_elasticache   = true
redis_node_type      = "cache.t3.micro"   # 개발용
# redis_node_type    = "cache.r6g.large"  # 프로덕션용
redis_engine_version = "7.0"

# -----------------------------------------------------------------------------
# MSK Kafka 설정 (선택적)
# -----------------------------------------------------------------------------
# MSK는 비용이 높으므로 개발 환경에서는 K8s 내 Strimzi 사용 권장
create_msk          = false
msk_instance_type   = "kafka.t3.small"    # 개발용
# msk_instance_type = "kafka.m5.large"    # 프로덕션용
msk_kafka_version   = "3.6.0"
msk_ebs_volume_size = 100
